<h1 class="py-5">Create new user:</h1>

<%= form_for @user, html: {class: 'w-50'} do |f| %>
  <div class="form-group">
    <%= f.label :email, 'Your email:' %><br>
    <%= f.email_field :email, placeholder: 'yourname@example.com', class: "form-control" %>
  </div>

  
  <div class="form-group">
    <%= f.label :username, 'Your username:' %><br>
    <%= f.text_field :username, placeholder: 'Username', class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :password, 'Your password:' %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
